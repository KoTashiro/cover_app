  - if @order.errors.present?
    ul#error_explanation
      - @order.errors.full_messages.each do | message |
        li = message
  = form_with model: @order, local: true do |f|
    form-group.row
      = f.label :お子様のお名前, class: "col-sm-3 col-form-label", for: "inputChild"
      .col-sm-9
        = f.text_field :child_name, class: "form-control mb-2", id: "inputChild"
    .form-group.row
      = f.label :ふりがな, class: "col-sm-3 col-form-label", for: "inputRuby"
      .col-sm-9
        = f.text_field :ruby_name, class: "form-control mb-2", id: "inputRuby"
    .form-group.row
      .col-sm-3 オプション
      .col-sm-9
        .form-check
          = f.label :need_ruby, class: "form-check-label" do
            = f.check_box :need_ruby, class: "form-check-input mb-2"
            | ふりがなをつける
    .form-group.row
      .col-sm-3 オプション
      .col-sm-9
        .form-check
          = f.label :need_space, class: "form-check-label" do
            = f.check_box :need_space, class: "form-check-input mb-2"
            | 姓と名の間隔をあける
    .form-group.row
      javascript:
        function CB(g_id,th_num) {
          var dst = document.getElementById("t_thread");
          dst.value = th_num
          var elements = document.getElementsByClassName("cth");
          elements = Array.from( elements ) ;
          elements.forEach(x => x.style.borderWidth = "0px");
          var set = document.getElementById(g_id);
          set.style.border = "solid 3px blue";
        };
        function DB(g_id,th_num) {
          var dst = document.getElementById("t_font");
          dst.value = th_num
          var elements = document.getElementsByClassName("cfo");
          elements = Array.from( elements ) ;
          elements.forEach(x => x.style.borderWidth = "0px");
          var set = document.getElementById(g_id);
          set.style.border = "solid 3px blue";
        };
      = f.label :thread_color, '糸色', class: "col-sm-3 col-form-label"
      .col-sm-9
        = f.text_field :thread_color, class: "form-control mb-2" ,id: "t_thread", readonly: true
        .d-flex.flex-wrap
